apeg PierceExpr;

num   returns n :   {n=0;} digit<n>  (digit<n1> {n = 10*n + n1;}) *;

digit returns x : '0' { x = 0;}/
                  '1' { x = 1;}/
                  '2' { x = 2;}/
                  '3' { x = 3;}/
                  '4' { x = 4;}/
                  '5' { x = 5;}/
                  '6' { x = 6;}/
                  '7' { x = 7;}/
                  '8' { x = 8;}/
                  '9' { x = 9;};
