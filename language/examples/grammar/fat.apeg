apeg fat;

-- 3!=6
-- 5!=120
-- 4!=24

prog:
 number<n> '!=' number<m> fat<n,r> {? m == r }
;

fat[int n] returns m:
   {? n > 0} fat<n-1, r> {m = n*r;} / {m = 1;}
;

number returns r  :
    digit<r> ( digit<aux> { r = r * 10 + aux; } )*
    ;
  
digit returns x1 :
  '0'  { x1 = 0; }
  / '1'  { x1 = 1; }
  / '2'  { x1 = 2; }
  / '3'  { x1 = 3; }
  / '4'  { x1 = 4; }
  / '5'  { x1 = 5; }
  / '6'  { x1 = 6; }
  / '7'  { x1 = 7; }
  / '8'  { x1 = 8; }
  / '9'  { x1 = 9; }
  ;
